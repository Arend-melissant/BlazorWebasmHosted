@inherits BlazorWebasmHosted.Client.Shared.MainLayoutComponent
@namespace BlazorWebasmHosted.Client.Shared
@inject NavigationManager NavigationManager


<div class="main-container" height="100%">
  <div class="alert alert-app-level alert-info">
    <div class="alert-items">
      <div class="alert-item static">
        <div class="alert-icon-wrapper">
          <cds-icon class="alert-icon" shape="info-circle"></cds-icon>
        </div>
        <div class="alert-text">
          @if (State.ErrorMsg != "")
          {
            <Alert Type="AlertType.Warning">
              <AlertItem>
                <AlertText>This is a Warning: @State.ErrorMsg</AlertText>
              </AlertItem>
            </Alert>
          }
        </div>
        <div class="alert-actions">
          <Button @onclick="ShowError" Label=@ErrorButtonText Variant="Primary"></Button>
        </div>
      </div>
    </div>
    <button type="button" class="close" aria-label="Close">
      <cds-icon aria-hidden="true" shape="close"></cds-icon>
    </button>
  </div>

  <header class="header header-6">
    <div class="branding">
      <a href="javascript:void(0)">
        <cds-icon shape="vm-bug"></cds-icon>
        <span class="title">Blazor web app</span>
      </a>
    </div>
    <div class="header-nav clr-row clr-align-items-end">
      <ButtonGroup Variant="Primary" >
        <Button @onclick='@(e => nav(e, "/"))'>Home</Button>
        <Button @onclick='@(e => nav(e, "/students"))'>Students</Button>
        <Button @onclick='@(e => nav(e, "/"))'>About</Button>
        <Button @onclick='@(e => nav(e, "/"))'>Blabla</Button>
      </ButtonGroup>
    </div>
  </header>

  <div class="content-container">
    <div class="content-area">
      @Body
      @* <div class="clr-align-self-end">
        <Button @onclick="ShowError" Label=@ErrorButtonText Variant="Primary"></Button>
      </div> *@
    </div>
  </div>
</div>

@code {
  protected async Task nav(EventArgs eventArgs, string url)
  {
    NavigationManager.NavigateTo(url);
  }
}
